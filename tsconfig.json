// tsconfig official documentation --> https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
{
    "compilerOptions":
    {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noLib": false,
        "outDir": "bin",
        "allowUnreachableCode": true,
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,

        "listFiles": true,
        "pretty": true,
        "version": true,
        "diagnostics": true,

        "types": [
            "react-desktop.d"
        ]
    },
    "include": [
        "node_modules/react-desktop.d",
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "doc",
        "data"
    ]
}
// http://www.typescriptlang.org/docs/handbook/compiler-options.html
